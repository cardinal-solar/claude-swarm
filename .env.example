# Claude Swarm Configuration
# Copy this file to .env and adjust values

# Server
PORT=3030
HOST=0.0.0.0
LOG_LEVEL=info

# Worker pool
MAX_CONCURRENCY=3
DEFAULT_TIMEOUT=1800000
DEFAULT_MODE=sdk

# Data persistence (mapped via Docker volume)
DATA_DIR=/app/data

# Knowledge base
KNOWLEDGE_MAX_CONTEXT=20
KNOWLEDGE_AUTO_LEARN=true
