{
  "name": "claude-code-ops",
  "version": "0.1.0",
  "description": "Claude-Code-as-a-Service platform â€” run Claude Code instances via API, CLI, or containers",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "require": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "require": "./dist/sdk/index.js",
      "default": "./dist/sdk/index.js"
    }
  },
  "bin": {
    "claude-ops": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "web/dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:web": "cd web && npm install && npm run build",
    "build:all": "npm run build && npm run build:web",
    "dev": "tsx watch src/index.ts",
    "dev:api": "tsx watch src/index.ts",
    "dev:web": "cd web && npm run dev",
    "start": "node dist/src/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run test:run && npm run build:all"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "automation",
    "llm",
    "task-runner",
    "code-generation",
    "claude-ops",
    "claude-as-a-service"
  ],
  "author": "Federico Costa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cardinal-solar/claude-swarm.git"
  },
  "homepage": "https://github.com/cardinal-solar/claude-swarm#readme",
  "bugs": {
    "url": "https://github.com/cardinal-solar/claude-swarm/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "claude-task-runner": "^0.1.0",
    "commander": "^14.0.3",
    "dockerode": "^4.0.9",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.10",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "simple-git": "^3.31.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/dockerode": "^4.0.1",
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
